[
  {
    "name": "prometheus",
    "image": "${dockerhub_account}/serratus-prometheus",
    "memoryReservation": 128,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 9090,
        "hostPort": 9090
      }
    ],
    "extraHosts": [
      {
        "hostname": "scheduler",
        "ipAddress": "${sched_ip}"
      }
    ],
    "ulimits": [{
      "name": "nofile",
      "softLimit": 1048576,
      "hardLimit": 1048576
    }],
    "mountPoints": [{
      "sourceVolume": "prometheus-data",
      "containerPath": "/prometheus"
    }],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "serratus-monitor",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "prometheus"
      }
    }
  },
  {
    "name": "grafana",
    "image": "${dockerhub_account}/serratus-grafana",
    "cpu": 256,
    "memoryReservation": 128,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 3000,
        "hostPort": 3000
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "serratus-monitor",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "grafana"
      }
    }
  }
]
